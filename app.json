{
  "name": "Rocket.Chat.Ext",
  "description": "Have your own open-source Slack-like online chat platform.",
  "repository": "https://github.com/luiskropotkin/Rocket.Chat",
  "logo": "https://raw.githubusercontent.com/RocketChat/Rocket.Chat/master/public/images/logo/512x512.png?v=3",
  "keywords": ["meteor", "social", "community", "chat"],
  "website": "https://rocket.chat",
  "env": {
    "BUILDPACK_URL": "https://github.com/RocketChat/meteor-buildpack-horse.git",
		"MONGO_URL": {
		    "description": "URL to the MongoDB server",
			  "required": true
		},
		"ROOT_URL": {
		    "description": "Application's root URL",
			  "required": true
		},
		"BUILDPACK_VERBOSE": {
			  "description": "Debug mode (boolean)",
			  "required": false
		},
    "DEPLOY_PLATFORM": "heroku"
  }
}
